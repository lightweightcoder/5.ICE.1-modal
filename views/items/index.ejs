<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />

    <!-- My own css -->
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <h4>Items:</h4>
    <% items.forEach( item => { %>
      <p>
        <%= item.id %> : <%= item.name %>
        <!-- Trigger/Open The Modal -->
        <button class="myBtn">Open Modal</button>
      </p>
      <!-- The Modal -->
      <div class="modal">

        <!-- Modal content -->
        <div class="modal-content">
          <span class="close">&times;</span>
          <p><%= item.description %></p>
        </div>

      </div>
    <% }) %>

    <script src="script.js"></script>
  </body>
</html>
